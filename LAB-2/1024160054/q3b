#include <iostream>
using namespace std;

int findMissingBinary(int arr[], int n) {
    int left = 0, right = n - 2;  // Array size is n-1

    while (left <= right) {
        int mid = left + (right - left) / 2;

        if (arr[mid] == mid + 1) {
            // Missing number is in the right half
            left = mid + 1;
        } else {
            // Missing number is in the left half
            right = mid - 1;
        }
    }

    // The missing number is at index `left + 1`
    return left + 1;
}

int main() {
    int arr[] = {1, 2, 3, 5, 6};  // Missing 4
    int n = 6;  // Total range is from 1 to n

    int missing = findMissingBinary(arr, n);
    cout << "Missing number (Binary Search): " << missing << endl;

    return 0;
}
